  "version": "0.2.0",
  "configurations": [
    {
      "name": "使用ts-node 调用ts",
      "type": "node",
      "request": "launch",
      "args": [
        "${relativeFile}"
      ],
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart",
      // "program": "${workspaceFolder}/multi-type/ts-debug/index.ts"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "直接使用node 调用js",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/js/index.js"
    },
  ]
}